<!-- ejs header template -->
<%- include('partials/header') %> 



<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>

    <% if (post.content.length > 100) { %>
        <p><%= post.content.slice(0, 97) + " ..." %> <a href="posts/<%= post.title %>" >Read More</a> </p>
    <% } %>     
<% }); %>

